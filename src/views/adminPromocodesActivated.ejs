<%- contentFor("content") %>
<article class="content">
	<div class="title-block">
		<h1 class="title"><%= __("Shop Activated Promo Codes") %></h1>
	</div>
	<section class="section">
		<form class="form-inline" action="" method="GET">
			<div class="form-group">
				<label for="accountDBID"><%= __("Account ID") %></label>
				<input type="number" class="form-control boxed" name="accountDBID" value="<%= accountDBID %>">
			</div>
			<div class="form-group">
				<label for="promoCodeId"><%= __("Promo code ID") %></label>
				<input type="number" class="form-control boxed" name="promoCodeId" value="<%= promoCodeId %>">
			</div>
			<button type="submit" class="btn btn-primary"><%= __("Show") %></button>
		</form>
	</section>
	<section class="section">
		<a class="btn btn-warning" title="" href="/promocodes_activated/add?promoCodeId=<%= promoCodeId %>&amp;accountDBID=<%= accountDBID %>"><%= __("Activate promo code") %></a>
	</section>
	<%_ if (promocodes === null) { _%>
	<section class="section">
		<div class="alert alert-info">
			<%= __("Please enter account ID or promo code ID.") %>
		</div>
	</section>
	<%_ } else { _%>
	<section class="section">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-block">
						<section>
							<div class="table-responsive">
								<table class="table table-hover data-table-nosort mt-5">
									<thead>
										<tr>
											<th><%= __("Activation time") %></th>
											<th><%= __("Promo code ID") %></th>
											<th><%= __("Promo code") %></th>
											<th><%= __("Account ID") %></th>
											<th></th>
										</tr>
									</thead>
									<tbody>
										<%_ promocodes.forEach(activated => { _%>
										<tr>
											<td><%= moment(activated.get("createdAt")).tz(user.tz).format("YYYY-MM-DD HH:mm:ss") %></td>
											<td><%= activated.get("promoCodeId") %></td>
											<td><%= activated.get("promoCode") %></td>
											<td><%= activated.get("accountDBID") %></td>
											<td class="text-right">
												<a class="btn btn-secondary btn-sm" href="/promocodes_activated/delete?id=<%= activated.get("id") %>" data-toggle="modal" data-target="#confirm-del-modal"><i class="fa fa-trash-o "></i></a>
											</td>
										</tr>
										<%_ }) _%>
									</tbody>
								</table>
							</div>
						</section>
					</div>
				</div>
			</div>
		</div>
	</section>
	<%_ } _%>
</article>