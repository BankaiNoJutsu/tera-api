<%- contentFor("content") %>
<article class="content">
	<div class="title-block">
		<h1 class="title"><%= __("Add Account") %></h1>
	</div>
	<section class="section">
		<a class="btn btn-secondary" title="" href="/accounts"><i class="fa fa-chevron-left"></i> <%= __("Back to list") %></a>
	</section>
	<section class="section">
		<div class="row">
			<div class="col-md-6">
				<div class="card card-block has-error">
					<form id="form" method="POST" action="">
						<%- include("partials/adminFormErrors", { errors }) %>
						<div class="form-group">
							<label class="control-label" for="userName"><%= __("Name") %></label>
							<textarea type="text" class="form-control boxed" name="userName"><%= userName %></textarea>
						</div>
						<div class="form-group">
							<label class="control-label" for="passWord"><%= __("Password") %></label>
							<textarea type="text" class="form-control boxed" name="passWord"><%= passWord %></textarea>
						</div>
						<div class="form-group">
							<label class="control-label" for="email"><%= __("Email") %></label>
							<textarea type="email" class="form-control boxed" name="email"><%= email %></textarea>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary"><%= __("Add") %></button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</article>